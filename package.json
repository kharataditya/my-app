{
  "name": "couple-chat",
  "version": "1.0.0",
  "description": "A private chat application for a long-distance couple",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "server-install": "npm install",
    "install-all": "npm install && cd client && npm install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "echo 'Building server' && npm install",
    "vercel-build": "node vercel-build.js",
    "client-build": "cd client && npm install && npm run build",
    "deploy-helper": "node deploy.js",
    "setup-mongodb": "node setup-mongodb.js"
  },
  "keywords": [
    "chat",
    "private",
    "couple"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
